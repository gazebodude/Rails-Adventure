<!DOCTYPE html>
<html>
<head>
  <title>Adventure on Rails | <%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, "jquery.counter-1.0.js" %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
    $(function() {
      $("#node_action_desc").counter({
        goal: 200
      });
      $("#node_body").counter({
        goal: 1000
      });   
      $("#node_title").counter({
        goal: 40
      });   
    });
  </script>
</head>
<body>
  <%= render 'layouts/navbar' %>
  <%= render 'layouts/header' %>

  <div class="main_view">
    <% unless flash.empty? then %>
      <div id="flash_messages">
      <% flash.each do |key, value| %>
        <span class="flash_key"><%= key.upcase %></span>: 
        <span class="flash_value"><%= value %></span><br />
      <% end %>
      </div>
    <% end %>
    <%= yield %>
  </div>

  <%= render 'layouts/footer' %>
  <%= debug(params) if Rails.env.development? %>
</body>
</html>
