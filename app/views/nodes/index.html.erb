<h1>Listing nodes</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Body</th>
    <th>Action Description</th>
    <th>Parent ID</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><span class="node_id"><%= node.id %></span></td>
    <td><span class="node_title"><%= node.title %></span></td>
    <td><span class="node_body"><%= node.body %></span></td>
    <td><span class="node_action_desc"><%= node.action_desc %></span></td>
    <td><span class="node_parent_id">
      <%= node.parent ? node.parent.id : "none" %>
    </span></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

